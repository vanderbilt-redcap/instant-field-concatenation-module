{
	"name": "Instant Field Concatenation",

	"namespace": "Vanderbilt\\InstantConcatenateExternalModule",

	"description": "Concatenates the values of specified fields (Text/Notes fields only) and immediately places their combined result into another field on the *same* form/survey. This action is triggered when a source field's value is modified on the form/survey.",

	"authors": [
		{
			"name": "Scott J. Pearson",
			"email": "datacore@vumc.org",
			"institution": "Vanderbilt University Medical Center"
		}
	],
	
	"permissions": [
                "redcap_survey_page",
                "redcap_data_entry_form"
	],

	"links": {
	},

	"project-settings": [
		{
			"key" : "concatenated-fields",
			"name" : "Concatenated Field",
			"type" : "sub_settings",
			"repeatable" : true,
			"sub_settings" : [
				{
					"key": "destination",
					"name": "Destination Field",
					"required": true,
					"type": "field-list",
					"repeatable": false
				},
				{
					"key": "source",
					"name": "Source Fields (in order)",
					"required": true,
					"type": "field-list",
					"repeatable": true
				},
				{
					"key": "spaces",
					"name": "Put Spaces Between the Items?",
					"required": false,
					"type": "checkbox",
					"repeatable": false
				}
			]
		}
	]
}
